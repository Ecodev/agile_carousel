<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>

    <sheets>

        <selection>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:flexform.tab.source</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.folders>
                        <TCEforms>
                            <label>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.folders</label>
                            <config>
                                <type>input</type>
                                <size>40</size>
                                <eval>trim</eval>
                                <wizards type="array">
                                    <link type="array">
                                        <type>popup</type>
                                        <icon>link_popup.gif</icon>
                                        <module type="array">
                                            <name>wizard_element_browser</name>
                                            <urlParameters type="array">
                                                <mode>wizard</mode>
                                                <act>file</act>
                                            </urlParameters>
                                        </module>
                                        <params>
                                            <blindLinkOptions>page,url,mail,spec,file</blindLinkOptions>
                                        </params>

                                        <JSopenParams>height=900,width=900,status=0,menubar=0,scrollbars=1</JSopenParams>
                                    </link>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.folders>
                    <settings.selection>
                        <TCEforms>
                            <label>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.selection</label>
                            <config>
                                <type>select</type>
                                <itemsProcFunc>Fab\CarouselGallery\Backend\TceForms->getSelections</itemsProcFunc>
                                <size>1</size>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.selection>
                    <settings.additionalEquals>
                        <TCEforms>
                            <label>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.additionalEquals</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.additionalEquals>

                    <settings.sorting>
                        <TCEforms>
                            <label>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.sorting</label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.sorting>
                    <settings.direction>
                        <TCEforms>
                            <label>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.direction</label>
                            <config>
                                <type>select</type>
                                <items>
                                    <numIndex index="0" type="array">
                                        <numIndex index="0"></numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>

                                    <numIndex index="1" type="array">
                                        <numIndex index="0">
                                            LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.direction.descending
                                        </numIndex>
                                        <numIndex index="1">DESC</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">
                                            LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.direction.ascending
                                        </numIndex>
                                        <numIndex index="1">ASC</numIndex>
                                    </numIndex>
                                </items>
                                <size>1</size>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.direction>
                </el>
            </ROOT>
        </selection>

        <sorting>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:flexform.tab.sorting</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                </el>
            </ROOT>
        </sorting>

        <slideSettings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Slide settings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.autoPlay>
                        <TCEforms>
                            <label>
                                Auto Play
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.autoPlay>
                    <settings.waitTime>
                        <TCEforms>
                            <label>
                                Wait time
                            </label>
                            <config>
                                <type>input</type>
                                <default>3000</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.waitTime>
                    <settings.autoReplay>
                        <TCEforms>
                            <label>
                                Play again after interaction
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.autoReplay>
                    <settings.loop>
                        <TCEforms>
                            <label>
                                Loop
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.loop>

                    <settings.transitionTime>
                        <TCEforms>
                            <label>
                                Transition time
                            </label>
                            <config>
                                <type>input</type>
                                <default>1000</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.transitionTime>
                    <settings.freeMode>
                        <TCEforms>
                            <label>
                                Free mode
                            </label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.freeMode>
                    <settings.showThumbnails>
                        <TCEforms>
                            <label>
                                Free mode
                            </label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.showThumbnails>
                </el>
            </ROOT>
        </slideSettings>

        <imageSettings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:flexform.tab.imageSettings</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.format>
                        <TCEforms>
                            <label>
                                LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.thumbnailFormat
                            </label>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">
                                            LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.thumbnailFormat.natural
                                        </numIndex>
                                        <numIndex index="1">natural</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">
                                            LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.thumbnailFormat.square
                                        </numIndex>
                                        <numIndex index="1">square</numIndex>
                                    </numIndex>
                                </items>
                                <minitems>0</minitems>
                                <maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.format>
                    <settings.slidesPerView>
                        <TCEforms>
                            <label>
                                Slides per view
                            </label>
                            <config>
                                <type>input</type>
                                <default>1</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slidesPerView>
                    <settings.margin>
                        <TCEforms>
                            <label>
                                LLL:EXT:carousel_gallery/Resources/Private/Language/locallang.xlf:settings.margin
                            </label>
                            <config>
                                <type>input</type>
                                <default>10</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.margin>
                    <settings.slideHeight>
                        <TCEforms>
                            <label>
                                Slide height
                            </label>
                            <config>
                                <type>input</type>
                                <default>400</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.slideHeight>
                    <settings.thumbnailHeight>
                        <TCEforms>
                            <label>
                                Thumbnails height
                            </label>
                            <config>
                                <type>input</type>
                                <default>100</default>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.thumbnailHeight>
                </el>
            </ROOT>
        </imageSettings>

    </sheets>
</T3DataStructure>
